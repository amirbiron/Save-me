# הגדרות בסיסיות
BOT_TOKEN=your_bot_token_from_botfather

# הגדרות שרת (לרנדר)
WEBHOOK_URL=https://your-app-name.onrender.com
PORT=8443

# הגדרות מסד נתונים
DATABASE_PATH=save_me_bot.db

# הגדרות לוגים
LOG_LEVEL=INFO
DEBUG=false

# הגדרות תזכורות
MAX_REMINDER_HOURS=168
MIN_REMINDER_HOURS=1

# הגדרות חיפוש
MAX_SEARCH_RESULTS=50

# הגדרות ייצוא
EXPORT_FORMAT=json

# אבטחה (אופציונלי - השאר ריק לגישה לכולם)
ALLOWED_USERS=
